{
  "builders":[
    {
      "name": "docker",
      "type": "docker",
      "image": "{{user `base_image`}}",
      "pull": false,
      "commit": true,
      "changes": [
        "ENTRYPOINT [\"\"]",
        "CMD [\"/bin/bash\"]"
      ]
    }
  ],
  "provisioners":[
    {
      "type": "shell",
      "inline": [
        "yum clean all -y",
        "yum update -y",
        "curl -sSL https://raw.githubusercontent.com/petems/puppet-install-shell/master/install_puppet_5_agent.sh | sh"
      ]
    },
    {
      "type": "puppet-masterless",
      "manifest_file": "manifests/stackbase.pp",
      "module_paths": ["./modules"],
      "prevent_sudo": true,
      "puppet_bin_dir": "/opt/puppetlabs/puppet/bin"
    },
    {
      "type": "shell",
      "inline": [
        "yum remove -y puppetlabs-release-pc1 puppet-agent puppet5-release"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "only": ["docker"],
      "repository": "{{user `build_repository`}}",
      "tag": "{{user `build_name`}}-{{user `build_timestamp`}}",
      "force": "false"
    },
    {
      "type": "docker-tag",
      "only": ["docker"],
      "repository": "{{user `build_repository`}}",
      "tag": "{{user `build_name`}}",
      "force": "false"
    },
    {
      "type": "manifest"
    }
  ],
  "variables": {
    "base_image": "docker.io/centos:7",
    "build_repository": "docker.io/lsstsqre/centos",
    "build_name": "7-stackbase",
    "build_timestamp": "{{isotime \"20060102150405\"}}"
  }
}
