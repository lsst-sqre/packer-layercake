{
  "builders":[
    {
      "name": "docker",
      "type": "docker",
      "image": "{{user `base_image`}}",
      "pull": false,
      "commit": true,
      "changes": [
        "USER vagrant",
        "WORKDIR /home/vagrant",
        "ENTRYPOINT [\"\"]",
        "CMD [\"/bin/bash\"]"
      ]
    },
    {
      "name": "openstack-centos-6",
      "type": "openstack",
      "ssh_username": "vagrant",
      "image_name": "centos-6-stack-{{user `products`}}-{{user `tag`}}-{{user `build_timestamp`}}",
      "source_image": "{{user `openstack-centos-6-source_image`}}",
      "use_floating_ip": true,
      "floating_ip_pool": "ext-net",
      "security_groups": ["default", "remote SSH"],
      "networks": ["fc77a88d-a9fb-47bb-a65d-39d1be7a7174"],
      "flavor": "m4.large"
    },
    {
      "name": "openstack-centos-7",
      "type": "openstack",
      "ssh_username": "vagrant",
      "image_name": "centos-7-stack-{{user `products`}}-{{user `tag`}}-{{user `build_timestamp`}}",
      "source_image": "{{user `openstack-centos-7-source_image`}}",
      "use_floating_ip": true,
      "floating_ip_pool": "ext-net",
      "security_groups": ["default", "remote SSH"],
      "networks": ["fc77a88d-a9fb-47bb-a65d-39d1be7a7174"],
      "flavor": "m4.large"
    },
    {
      "name": "aws-centos-6",
      "type": "amazon-ebs",
      "ami_name": "centos-6-stack-{{user `products`}}-{{user `tag`}}-{{user `build_timestamp`}}",
      "instance_type": "c4.2xlarge",
      "region": "{{user `aws_default_region`}}",
      "source_ami": "{{user `source_ami`}}",
      "ssh_pty": true,
      "ssh_username": "vagrant",
      "ami_regions": [
        "us-east-1",
        "us-west-2"
      ],
      "ami_groups": "all",
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_type": "gp2"
        }
      ]
    },
    {
      "name": "aws-centos-7",
      "type": "amazon-ebs",
      "ami_name": "centos-7-stack-{{user `products`}}-{{user `tag`}}-{{user `build_timestamp`}}",
      "instance_type": "c4.2xlarge",
      "region": "{{user `aws_default_region`}}",
      "source_ami": "{{user `source_ami`}}",
      "ssh_pty": true,
      "ssh_username": "vagrant",
      "ami_regions": [
        "us-east-1",
        "us-west-2"
      ],
      "ami_groups": "all",
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_type": "gp2"
        }
      ]
    }
  ],
  "provisioners":[
    {
      "type": "shell",
      "only": [
        "openstack-centos-6",
        "openstack-centos-7",
        "aws-centos-6",
        "aws-centos-7"
      ],
      "environment_vars": [
        "TAG={{user `tag`}}",
        "PRODUCTS={{user `products`}}",
        "STACK_PATH={{user `stack_path`}}"
      ],
      "scripts": [
        "scripts/build.sh"
      ]
    },
    {
      "type": "shell",
      "only": ["docker"],
      "environment_vars": [
        "TAG={{user `tag`}}",
        "PRODUCTS={{user `products`}}",
        "STACK_PATH={{user `stack_path`}}"
      ],
      "scripts": [
        "scripts/root-build.sh"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "scripts": [
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "only": ["docker"],
      "repository": "{{user `build_repository`}}",
      "tag": "{{user `build_name`}}-{{user `build_timestamp`}}",
      "force": "false"
    },
    {
      "type": "docker-tag",
      "only": ["docker"],
      "repository": "{{user `build_repository`}}",
      "tag": "{{user `build_name`}}",
      "force": "false"
    },
    {
      "type": "manifest"
    }
  ],
  "variables": {
    "base_image": "docker.io/lsstsqre/centos:7-newinstall",
    "build_repository": "docker.io/lsstsqre/centos",
    "build_name": "7-stack-lsst_apps-w_2017_45",
    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "stack_path": "/opt/lsst/software/stack",
    "tag": "w_2017_45",
    "products": "lsst_apps",
    "aws_default_region": "us-east-1",
    "source_ami": "",
    "openstack-centos-6-source_image": "",
    "openstack-centos-7-source_image": ""
  }
}
